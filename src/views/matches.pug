doctype html
html
    include includes/tags
    body
        //-span(id="switchlabel")
        //-label(class="switch" id="themeswitch")
        //-    input(type="checkbox" id="box")
        //-    span(class="slider")
        a(
            href="./index.html"
            class="index-corner"
            aria-label="Go back to main page"
            )
            include includes/index.svg
        h1(id="title")
        h2(id="pagename")
        p(id="about")
        button(class="matchswapper" id="swapleft")
            span(id="leftarrow")
        select(id="match-dropdown")
        button(class="matchswapper" id="swapright")
            span(id="rightarrow")
        p(id="match-text")
        canvas(id="match")
        div(class="small-button-holder")
            button(id="lister_button" class="toolbutton")
            button(id="questions_button" class="toolbutton")
            button(id="custom_button" class="toolbutton")
        button(class="backbutton" id="back_button")
            span(id="back_text")
        script(type="application/javascript") window.VERSION = "#{version}"
        if inline_js
            script(type="module") !{js["matches"]}
        else
            script(type="module" src="./dist/matches.js")